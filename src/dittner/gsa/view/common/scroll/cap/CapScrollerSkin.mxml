<?xml version="1.0" encoding="utf-8"?>
<s:SparkSkin xmlns:fx="http://ns.adobe.com/mxml/2009"
             xmlns:s="library://ns.adobe.com/flex/spark"
             xmlns:scroll="dittner.gsa.view.common.scroll.*">

    <fx:Metadata>
		<![CDATA[
        [HostComponent("spark.components.Scroller")]
        ]]>
	</fx:Metadata>

    <fx:Script>
		<![CDATA[
        override public function beginHighlightBitmapCapture():Boolean {
            var needUpdate:Boolean = super.beginHighlightBitmapCapture();
            graphics.beginFill(0);
            graphics.drawRect(0, 0, width, height);
            graphics.endFill();

            return needUpdate;
        }

        override public function endHighlightBitmapCapture():Boolean {
            var needUpdate:Boolean = super.endHighlightBitmapCapture();
            graphics.clear();

            return needUpdate;
        }
        ]]>
	</fx:Script>

    <scroll:FastVScrollBar id="verticalScrollBar"
                           skinClass="dittner.gsa.view.common.scroll.cap.CapVScrollBarSkin"
                           visible="false"/>

    <scroll:FastHScrollBar id="horizontalScrollBar"
                           skinClass="dittner.gsa.view.common.scroll.cap.CapHScrollBarSkin"
                           visible="false"/>

</s:SparkSkin>
