<?xml version="1.0"?>
<view:ViewBase xmlns:fx="http://ns.adobe.com/mxml/2009"
               xmlns:s="library://ns.adobe.com/flex/spark"
               xmlns:view="dittner.gsa.view.common.view.*"
               xmlns:utils="dittner.gsa.view.common.utils.*"
               xmlns:toolbar="dittner.gsa.view.documentList.toolbar.*"
               xmlns:form="dittner.gsa.view.documentList.form.*"
               xmlns:list2="dittner.gsa.view.documentList.list.*">
    <fx:Script><![CDATA[
        import mx.collections.ArrayCollection;

        //--------------------------------------
        //  subjectListProvider
        //--------------------------------------
        private var _subjectListProvider:ArrayCollection;
        [Bindable("subjectListProviderChanged")]
        public function get subjectListProvider():ArrayCollection {return _subjectListProvider;}
        public function set subjectListProvider(value:ArrayCollection):void {
            if (_subjectListProvider != value) {
                _subjectListProvider = value;
                dispatchEvent(new Event("subjectListProviderChanged"));
            }
        }
        ]]></fx:Script>

    <utils:BG width="100%" height="100%" color="#172141"/>

    <s:HGroup width="100%" height="100%"
              gap="0">

        <toolbar:Toolbar id="toolbar" height="100%"/>

        <list2:FileList id="fileList" width="400" height="100%"/>

        <form:DocumentForm id="documentForm" width="100%" height="100%" visible="false"/>
    </s:HGroup>

</view:ViewBase>