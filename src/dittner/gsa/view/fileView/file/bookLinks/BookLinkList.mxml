<?xml version="1.0"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009"
         xmlns:s="library://ns.adobe.com/flex/spark"
         xmlns:list="dittner.gsa.view.common.list.*">

    <fx:Script><![CDATA[
        import dittner.gsa.domain.fileSystem.GSAFile;
        import dittner.gsa.domain.fileSystem.body.links.BookLink;
        import dittner.gsa.domain.fileSystem.body.links.BookLinksBody;

        import mx.collections.ArrayCollection;
        import mx.collections.Sort;

        public function activate(file:GSAFile):void {
            var coll:ArrayCollection = new ArrayCollection((file.body as BookLinksBody).bookLinks);
            coll.sort = getLinksSort();
            list.dataProvider = coll;
        }

        private static var linksSort:Sort;
        public static function getLinksSort():Sort {
            if (!linksSort) {
                linksSort = new Sort();
                linksSort.compareFunction = linkCompareFunction;
            }
            return linksSort;
        }

        private static function linkCompareFunction(a:BookLink, b:BookLink, fields:Array = null):int {
            var result:int = 0;
            if (a.authorName > b.authorName) {
                result = 1;
            }
            else if (a.authorName == b.authorName) {
                if (a.bookName > b.bookName) result = 1;
                else if (a.bookName == b.bookName) result = 0;
                else result = -1;
            }
            else result = -1;

            return result;
        }
        ]]></fx:Script>

    <s:Scroller width="100%" height="100%"
                styleName="cosmoScrollerStyle"
                horizontalScrollPolicy="off" verticalScrollPolicy="on">
        <list:FileBodyList id="list"
                           width="100%"
                           clickableArea="40"
                           deselectEnabled="true"
                           itemRenderer="dittner.gsa.view.fileView.file.bookLinks.BookLinkRenderer">
            <list:layout>
                <s:VerticalLayout gap="0" useVirtualLayout="true"/>
            </list:layout>
        </list:FileBodyList>
    </s:Scroller>

</s:Group>
