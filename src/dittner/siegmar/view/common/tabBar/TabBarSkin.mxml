<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009"
        xmlns:s="library://ns.adobe.com/flex/spark"
        alpha.disabled="0.5">

    <fx:Metadata>
		<![CDATA[
        [HostComponent("spark.components.TabBar")]
        ]]>
	</fx:Metadata>

    <s:states>
        <s:State name="normal"/>
        <s:State name="disabled"/>
    </s:states>

    <s:DataGroup id="dataGroup"
                 height="100%" width="100%">
        <s:layout>
            <s:HorizontalLayout gap="10" verticalAlign="middle" useVirtualLayout="false"/>
        </s:layout>
        <s:itemRenderer>
            <fx:Component>
                <s:ButtonBarButton width="100%" skinClass="dittner.siegmar.view.common.tabBar.TabBarButtonSkin"/>
            </fx:Component>
        </s:itemRenderer>
    </s:DataGroup>

</s:Skin>
